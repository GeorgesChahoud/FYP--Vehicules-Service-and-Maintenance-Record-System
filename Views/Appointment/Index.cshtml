@model IEnumerable<FYP___Vehicules_Service_and_Maintenance_Record_System.Models.Appointment>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>My Appointments - CarHub</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@600;700&family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->

    <!-- Topbar Start -->
    <div class="container-fluid bg-light p-0">
        <div class="row gx-0 d-none d-lg-flex">
            <div class="col-lg-7 px-5 text-start">
                <div class="h-100 d-inline-flex align-items-center py-3 me-4">
                    <small class="fa fa-map-marker-alt text-primary me-2"></small>
                    <small>123 Street, Beirut, Lebanon</small>
                </div>
                <div class="h-100 d-inline-flex align-items-center py-3">
                    <small class="far fa-clock text-primary me-2"></small>
                    <small>Mon - Fri : 09.00 AM - 09.00 PM</small>
                </div>
            </div>
            <div class="col-lg-5 px-5 text-end">
                <div class="h-100 d-inline-flex align-items-center py-3 me-4">
                    <small class="fa fa-phone-alt text-primary me-2"></small>
                    <small>+961 03 866 298</small>
                </div>
                <div class="h-100 d-inline-flex align-items-center">
                    <a class="btn btn-sm-square bg-white text-primary me-1" href=""><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-sm-square bg-white text-primary me-1" href=""><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-sm-square bg-white text-primary me-1" href=""><i class="fab fa-linkedin-in"></i></a>
                    <a class="btn btn-sm-square bg-white text-primary me-0" href=""><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->

    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a href="@Url.Action("Index", "Home")" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="fa fa-car me-3"></i>CarHub</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="@Url.Action("Index", "Home")" class="nav-item nav-link">Home</a>
                <a href="@Url.Action("Index", "Car")" class="nav-item nav-link">My Cars</a>
                <a href="@Url.Action("Index", "Appointment")" class="nav-item nav-link active">My Appointments</a>
            </div>
            <form method="post" asp-action="Logout" asp-controller="Auth" class="d-none d-lg-block">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary py-4 px-lg-5">
                    Logout<i class="fa fa-sign-out-alt ms-3"></i>
                </button>
            </form>
        </div>
    </nav>
    <!-- Navbar End -->

    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 p-0" style="background-image: url(/img/carousel-bg-1.jpg);">
        <div class="container-fluid page-header-inner py-5">
            <div class="container text-center">
                <h1 class="display-3 text-white mb-3 animated slideInDown">My Appointments</h1>
                <p class="text-white">Track Your Service Bookings</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- My Appointments Section Start -->
    <div class="container-xxl py-5">
        <div class="container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show wow fadeInDown">
                    <i class="fa fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show wow fadeInDown">
                    <i class="fa fa-exclamation-triangle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">
                <h1 class="mb-4">Total Appointments: <span class="text-primary">@(Model?.Count() ?? 0)</span></h1>
            </div>

            <div class="mb-4 text-center wow fadeInUp" data-wow-delay="0.2s">
                <a href="@Url.Action("Index", "Home")#booking" class="btn btn-primary py-3 px-5">
                    <i class="fa fa-plus me-2"></i>Book New Appointment
                </a>
            </div>

            <div class="bg-light rounded p-4 wow fadeInUp" data-wow-delay="0.3s">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Vehicle</th>
                                <th>Service</th>
                                <th>Date & Time</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var appointment in Model)
                                {
                                    <tr>
                                        <td><strong>#@appointment.ID</strong></td>
                                        <td>
                                            <i class="fa fa-car text-primary me-2"></i>
                                            @(appointment.Car?.Make ?? "N/A") @(appointment.Car?.Model ?? "")
                                            <br />
                                            <small class="text-muted">@(appointment.Car?.Year.ToString() ?? "") - Plate: @(appointment.Car?.PlateNumber ?? "N/A")</small>
                                        </td>
                                        <td>
                                            <i class="fa fa-tools text-muted me-2"></i>
                                            @(appointment.Service?.ServiceName ?? "Not specified")
                                        </td>
                                        <td>
                                            <i class="fa fa-calendar text-muted me-2"></i>
                                            @appointment.ScheduleAppointment.ToString("MMM dd, yyyy")
                                            <br />
                                            <small class="text-muted">@appointment.ScheduleAppointment.ToString("hh:mm tt")</small>
                                        </td>
                                        <td>
                                            @{
                                                var statusClass = appointment.Status?.Name switch
                                                {
                                                    "Pending" => "badge bg-warning text-dark",
                                                    "Confirmed" => "badge bg-info",
                                                    "In Progress" => "badge bg-primary",
                                                    "Completed" => "badge bg-success",
                                                    "Cancelled" => "badge bg-danger",
                                                    _ => "badge bg-secondary"
                                                };
                                            }
                                            <span class="@statusClass">
                                                @(appointment.Status?.Name ?? "Unknown")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            @if (appointment.Status?.Name != "Cancelled" && appointment.Status?.Name != "Completed")
                                            {
                                                <form method="post" asp-action="CancelAppointment" asp-controller="Appointment" asp-route-id="@appointment.ID" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to cancel this appointment?')">
                                                        <i class="fa fa-times"></i> Cancel
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="text-muted">No actions</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model == null || !Model.Any())
                {
                    <div class="alert alert-info text-center mt-4">
                        <i class="fa fa-info-circle me-2"></i>
                        You haven't booked any appointments yet. Click "Book New Appointment" to schedule a service.
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- My Appointments Section End -->

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Address</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>123 Street, Beirut, Lebanon</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+961 03 866 298</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>CarHub@gmail.com</p>
                </div>
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Quick Links</h4>
                    <a class="btn btn-link" href="@Url.Action("Index", "Home")">Home</a>
                    <a class="btn btn-link" href="@Url.Action("Index", "Car")">My Cars</a>
                    <a class="btn btn-link" href="@Url.Action("Index", "Appointment")">My Appointments</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.js"></script>
    <script src="~/lib/easing/easing.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
