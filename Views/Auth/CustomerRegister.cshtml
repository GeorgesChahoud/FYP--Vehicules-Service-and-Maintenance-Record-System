<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>CarServ - Customer Registration</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@600;700&family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    <style>




        .container-fluid, .container {
            position: relative;
            z-index: 1;
        }

        .back-to-top {
            display: none !important;
        }

        .booking {
            margin-top: 0 !important;
            margin-bottom: 0 !important;
            background-color: transparent !important;
        }
    </style>
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Registration Form Start -->
    <div class="container-fluid bg-dark booking my-5 wow fadeInUp" data-wow-delay="0.1s">
        <!-- Back to Main Menu -->
        <div class="container" style="position: relative;" ;>
            <a href="@Url.Action("SelectRole", "Auth")"
               class="btn btn-outline-light"
               onmouseover="this.style.backgroundColor='white'; this.style.color='red'; this.style.borderColor='white';"
               onmouseout="this.style.backgroundColor='transparent'; this.style.color='white'; this.style.borderColor='white';" style="margin-top:20px">
                <i class="fa fa-arrow-left me-2"></i>Back to Main Menu
            </a>
        </div>
        <div class="container">
            <div class="row gx-5">
                <div class="col-lg-6 py-5">
                    <div class="py-5">
                        <h1 class="text-white mb-4">Join CarHub Today!</h1>
                        <p class="text-white mb-4">Create your account to access our professional car repair services. Register your vehicle information to get personalized maintenance schedules and service history tracking.</p>
                        <div class="row g-4 mb-4">
                            <div class="col-12">
                                <div class="d-flex">
                                    <div class="bg-white d-flex flex-shrink-0 align-items-center justify-content-center mt-1" style="width: 45px; height: 45px;">
                                        <i class="fa fa-check text-primary"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 class="text-white">Online Booking</h6>
                                        <span class="text-white">Schedule services at your convenience</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex">
                                    <div class="bg-white d-flex flex-shrink-0 align-items-center justify-content-center mt-1" style="width: 45px; height: 45px;">
                                        <i class="fa fa-check text-primary"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 class="text-white">Service History</h6>
                                        <span class="text-white">Track all your vehicle maintenance</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex">
                                    <div class="bg-white d-flex flex-shrink-0 align-items-center justify-content-center mt-1" style="width: 45px; height: 45px;">
                                        <i class="fa fa-check text-primary"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h6 class="text-white">Expert Service</h6>
                                        <span class="text-white">Professional technicians at your service</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="bg-primary h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                        <h1 class="text-white mb-4">Create Your Account</h1>

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="fa fa-exclamation-triangle me-2"></i>
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                <i class="fa fa-check-circle me-2"></i>
                                @TempData["SuccessMessage"]
                            </div>
                        }

                        <form method="post" asp-action="CustomerRegister" asp-controller="Auth">
                            @Html.AntiForgeryToken()
                            <div class="row g-3">
                                <!-- Personal Information Section -->
                                <div class="col-12">
                                    <h5 class="text-white text-start mb-3"><i class="fa fa-user me-2"></i>Personal Information</h5>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="text" class="form-control border-0" placeholder="First Name" name="FirstName" required style="height: 55px;">
                                </div>
                                <div class="col-12 col-sm-6">
                                    <input type="text" class="form-control border-0" placeholder="Last Name" name="LastName" required style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <input type="email" class="form-control border-0" placeholder="Email Address" name="Email" required style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <input type="tel" class="form-control border-0" placeholder="Phone Number" name="PhoneNumber" required style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <input type="text" class="form-control border-0" placeholder="Full Address" name="Address" required style="height: 55px;">
                                </div>

                                <!-- Account Security Section -->
                                <div class="col-12 mt-4">
                                    <h5 class="text-white text-start mb-3"><i class="fa fa-lock me-2"></i>Account Security</h5>
                                </div>
                                <div class="col-12">
                                    <input type="password" class="form-control border-0" placeholder="Password (min 6 characters)" name="Password" required minlength="6" style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <input type="password" class="form-control border-0" placeholder="Confirm Password" name="ConfirmPassword" required style="height: 55px;">
                                </div>

                                <!-- Terms and Submit -->
                                <div class="col-12 text-start mt-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="AgreeToTerms" id="agreeTerms" value="true" required>
                                        <label class="form-check-label text-white" for="agreeTerms">
                                            I agree to the <a href="#" class="text-white text-decoration-underline">Terms of Service</a> and <a href="#" class="text-white text-decoration-underline">Privacy Policy</a>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-secondary w-100 py-3" type="submit">
                                        <i class="fa fa-user-plus me-2"></i>Create Account
                                    </button>
                                </div>
                                <div class="col-12">
                                    <p class="text-white mb-0">
                                        Already have an account?
                                        <a href="@Url.Action("CustomerLogin", "Auth")" class="text-white text-decoration-underline fw-bold">Login here</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Registration Form End -->
    <!-- Back to Top -->
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
</body>

</html>