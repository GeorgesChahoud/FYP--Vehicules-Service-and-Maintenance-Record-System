<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>CarServ - Customer Login</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@600;700&family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <style>
        body {
            background: url('/img/pictureFYP.jpg');
            background-size: cover;
            min-height: 100vh;
            position: relative;
        }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0,0,0,0.6);
                z-index: 0;
            }

        .container-xxl {
            position: relative;
            z-index: 1;
        }

        .back-to-top {
            display: none !important;
        }
    </style>
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center" style="background: rgba(0, 0, 0, 0.8); z-index: 9999;">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->
    <!-- Back to Main Menu -->
    <div class="container mt-3" style="position: relative; z-index: 10000;">
        <a href="@Url.Action("SelectRole", "Auth")"
           class="btn btn-outline-light"
           onmouseover="this.style.backgroundColor='white'; this.style.color='red'; this.style.borderColor='white';"
           onmouseout="this.style.backgroundColor='transparent'; this.style.color='white'; this.style.borderColor='white';">
            <i class="fa fa-arrow-left me-2"></i>Back to Main Menu
        </a>
    </div>

    <!-- Login Form Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="bg-dark rounded h-100 d-flex flex-column justify-content-center text-center p-5 wow zoomIn" data-wow-delay="0.6s">
                        <h1 class="text-primary mb-4"><i class="fa fa-user me-3"></i>Customer Login</h1>
                        <p class="text-white mb-4">Welcome back! Please login to your account</p>

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="fa fa-exclamation-triangle me-2"></i>
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                <i class="fa fa-check-circle me-2"></i>
                                @TempData["SuccessMessage"]
                            </div>
                        }

                        <form method="post" asp-action="CustomerLogin" asp-controller="Auth">
                            @Html.AntiForgeryToken()
                            <div class="row g-3">
                                <div class="col-12">
                                    <input type="email" class="form-control border-0" placeholder="Email Address" name="Email" required style="height: 55px;">
                                </div>
                                <div class="col-12">
                                    <div class="input-group">
                                        <input type="password" class="form-control border-0"
                                               placeholder="Password" name="Password"
                                               id="CustomerPassword" required style="height: 55px;">

                                        <span class="input-group-text bg-white" style="cursor: pointer;" id="toggleCustomerPassword">
                                            <i class="fa fa-eye" id="toggleCustomerPasswordIcon"></i>
                                        </span>
                                    </div>
                                </div>

                                <div class="col-12 text-start">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="RememberMe" id="rememberMe" value="true">
                                        <label class="form-check-label text-white" for="rememberMe">
                                            Remember me
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit">Login</button>
                                </div>
                                <div class="col-12">
                                    <p class="text-white mb-0">Don't have an account? <a href="@Url.Action("CustomerRegister", "Auth")" class="text-primary">Register here</a></p>
                                </div>
                                <div class="col-12">
                                    <a href="@Url.Action("ForgotPassword", "Auth")" class="text-white">Forgot Password?</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Login Form End -->
    <!-- Back to Top -->
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/counterup/counterup.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script>
        const customerPassword = document.getElementById("CustomerPassword");
        const toggleCustomerPassword = document.getElementById("toggleCustomerPassword");
        const toggleCustomerPasswordIcon = document.getElementById("toggleCustomerPasswordIcon");

        toggleCustomerPassword.addEventListener("click", () => {
            const type = customerPassword.getAttribute("type") === "password" ? "text" : "password";
            customerPassword.setAttribute("type", type);

            // Toggle icon (eye ↔ eye slash)
            toggleCustomerPasswordIcon.classList.toggle("fa-eye");
            toggleCustomerPasswordIcon.classList.toggle("fa-eye-slash");
        });
    </script>


    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
</body>

</html></html>