@model IEnumerable<FYP___Vehicules_Service_and_Maintenance_Record_System.Models.Part>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Parts";
    ViewData["PageHeader"] = "Manage Parts";
    ViewData["PageSubtitle"] = "Parts Inventory Management";
    ViewData["ActivePage"] = "Parts";
}

<div class="container-xxl py-5">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show wow fadeInDown">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show wow fadeInDown">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="text-center wow fadeInUp mb-4" data-wow-delay="0.1s">
            <h1 class="mb-5">Parts Management</h1>
        </div>

        <div class="mb-4 text-center wow fadeInUp" data-wow-delay="0.2s">
            <a href="@Url.Action("CreatePart", "Admin")" class="btn btn-primary py-3 px-5">
                <i class="fa fa-plus me-2"></i>Add New Part
            </a>
        </div>

        <div class="bg-light rounded p-4 wow fadeInUp" data-wow-delay="0.3s">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Part Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Stock Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var part in Model)
                            {
                                <tr>
                                    <td><strong>#@part.ID</strong></td>
                                    <td>
                                        <i class="fa fa-cog text-primary me-2"></i>
                                        @part.PartName
                                    </td>
                                    <td>
                                        <strong class="text-success">$@part.Price.ToString("0.00")</strong>
                                    </td>
                                    <td>
                                        <span class="badge @(part.Quantity > 10 ? "bg-success" : part.Quantity > 0 ? "bg-warning" : "bg-danger")">
                                            @part.Quantity units
                                        </span>
                                    </td>
                                    <td>
                                        @if (part.Stock)
                                        {
                                            <span class="badge bg-success"><i class="fa fa-check me-1"></i>In Stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger"><i class="fa fa-times me-1"></i>Out of Stock</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("EditPart", "Admin", new { id = part.ID })" class="btn btn-sm btn-warning me-2">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <form method="post" asp-action="DeletePart" asp-route-id="@part.ID" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this part?')">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center mt-4">
                    <i class="fa fa-info-circle me-2"></i>
                    No parts found. Click "Add New Part" to create one.
                </div>
            }
        </div>

        <!-- Parts Stats -->
        @if (Model != null && Model.Any())
        {
            <div class="row g-4 mt-4">
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="bg-primary text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Count()</h3>
                        <p class="mb-0"><i class="fa fa-cogs me-2"></i>Total Parts</p>
                    </div>
                </div>
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="bg-success text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Count(p => p.Stock)</h3>
                        <p class="mb-0"><i class="fa fa-check-circle me-2"></i>In Stock</p>
                    </div>
                </div>
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="bg-danger text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Count(p => !p.Stock)</h3>
                        <p class="mb-0"><i class="fa fa-times-circle me-2"></i>Out of Stock</p>
                    </div>
                </div>
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.7s">
                    <div class="bg-info text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">$@Model.Average(p => p.Price).ToString("0.00")</h3>
                        <p class="mb-0"><i class="fa fa-dollar-sign me-2"></i>Avg Price</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
