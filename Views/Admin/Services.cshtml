@model IEnumerable<FYP___Vehicules_Service_and_Maintenance_Record_System.Models.Service>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Services";
    ViewData["PageHeader"] = "Manage Services";
    ViewData["PageSubtitle"] = "Service Offerings & Packages";
    ViewData["ActivePage"] = "Services";
}

<div class="container-xxl py-5">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show wow fadeInDown">
                <i class="fa fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show wow fadeInDown">
                <i class="fa fa-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="text-center wow fadeInUp mb-4" data-wow-delay="0.1s">
            <h1 class="mb-5">Available Services</h1>
        </div>

        <div class="mb-4 text-center wow fadeInUp" data-wow-delay="0.2s">
            <a href="@Url.Action("CreateService", "Admin")" class="btn btn-primary py-3 px-5">
                <i class="fa fa-plus me-2"></i>Add New Service
            </a>
        </div>

        <div class="bg-light rounded p-4 wow fadeInUp" data-wow-delay="0.3s">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Service Name</th>
                            <th>Description</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var service in Model)
                            {
                                <tr>
                                    <td><strong>#@service.ID</strong></td>
                                    <td>
                                        <i class="fa fa-tools text-primary me-2"></i>
                                        @service.ServiceName
                                    </td>
                                    <td>@service.Description</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("EditService", "Admin", new { id = service.ID })" class="btn btn-sm btn-warning me-2">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <form method="post" asp-action="DeleteService" asp-route-id="@service.ID" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this service?')">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center mt-4">
                    <i class="fa fa-info-circle me-2"></i>
                    No services found. Click "Add New Service" to create one.
                </div>
            }
        </div>

        <!-- Service Stats -->
        @if (Model != null && Model.Any())
        {
            <div class="row g-4 mt-4">
                <div class="col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="bg-primary text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Count()</h3>
                        <p class="mb-0"><i class="fa fa-tools me-2"></i>Total Services</p>
                    </div>
                </div>
                <div class="col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="bg-success text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Count()</h3>
                        <p class="mb-0"><i class="fa fa-check-circle me-2"></i>Active Services</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
