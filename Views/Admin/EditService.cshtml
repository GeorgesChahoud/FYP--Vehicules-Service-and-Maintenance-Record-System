@model FYP___Vehicules_Service_and_Maintenance_Record_System.Models.Service

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Service";
    ViewData["PageHeader"] = "Edit Service";
    ViewData["PageSubtitle"] = "Update service information";
    ViewData["ActivePage"] = "Services";
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger wow fadeInDown">@ViewBag.ErrorMessage</div>
                }
                <div class="bg-light rounded p-5 wow fadeInUp" data-wow-delay="0.3s">
                    <form method="post" asp-action="EditService">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ID" value="@Model.ID" />
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" name="ServiceName" value="@Model.ServiceName" required>
                            <label><i class="fa fa-tools text-primary me-2"></i>Service Name *</label>
                        </div>
                        <div class="form-floating mb-4">
                            <textarea class="form-control" name="Description" style="height: 150px" required>@Model.Description</textarea>
                            <label><i class="fa fa-file-alt text-primary me-2"></i>Service Description *</label>
                        </div>
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <button type="submit" class="btn btn-primary w-100 py-3">
                                    <i class="fa fa-save me-2"></i>Update Service
                                </button>
                            </div>
                            <div class="col-sm-6">
                                <a href="@Url.Action("Services", "Admin")" class="btn btn-secondary w-100 py-3">
                                    <i class="fa fa-times me-2"></i>Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
