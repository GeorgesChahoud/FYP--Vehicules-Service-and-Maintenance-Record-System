@model IEnumerable<FYP___Vehicules_Service_and_Maintenance_Record_System.Models.Employee>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Employees";
    ViewData["PageHeader"] = "Manage Employees";
    ViewData["PageSubtitle"] = "Staff Management & Control";
    ViewData["ActivePage"] = "Employees";
}

<div class="container-xxl py-5">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show wow fadeInDown" role="alert">
                <i class="fa fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show wow fadeInDown" role="alert">
                <i class="fa fa-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="text-center wow fadeInUp mb-4" data-wow-delay="0.1s">
            <h1 class="mb-5">Staff Members</h1>
        </div>

        <div class="mb-4 text-center wow fadeInUp" data-wow-delay="0.2s">
            <a href="@Url.Action("CreateEmployee", "Admin")" class="btn btn-primary py-3 px-5">
                <i class="fa fa-plus me-2"></i>Add New Employee
            </a>
        </div>

        <div class="bg-light rounded p-4 wow fadeInUp" data-wow-delay="0.3s">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Shift</th>
                            <th>Work Hours</th>
                            <th>Fee/Service</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td><strong>#@employee.ID</strong></td>
                                    <td>
                                        <i class="fa fa-user text-primary me-2"></i>
                                        @(employee.User?.FirstName ?? "N/A") @(employee.User?.LastName ?? "")
                                    </td>
                                    <td>
                                        <i class="fa fa-envelope text-muted me-2"></i>
                                        @(employee.User?.Email ?? "N/A")
                                    </td>
                                    <td>
                                        <i class="fa fa-phone text-muted me-2"></i>
                                        @(employee.User?.PhoneNumber ?? "N/A")
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@employee.Shift</span>
                                    </td>
                                    <td>@employee.WorkHours</td>
                                    <td>
                                        <strong class="text-success">$@employee.FeeByService.ToString("0.00")</strong>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("EditEmployee", "Admin", new { id = employee.ID })" class="btn btn-sm btn-warning me-2">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <form method="post" asp-action="DeleteEmployee" asp-controller="Admin" asp-route-id="@employee.ID" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this employee?')">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center mt-4">
                    <i class="fa fa-info-circle me-2"></i>
                    No employees found. Click "Add New Employee" to create one.
                </div>
            }
        </div>

        <!-- Employee Stats -->
        @if (Model != null && Model.Any())
        {
            <div class="row g-4 mt-4">
                <div class="col-md-4 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="bg-primary text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Count()</h3>
                        <p class="mb-0"><i class="fa fa-users me-2"></i>Total Employees</p>
                    </div>
                </div>
                <div class="col-md-4 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="bg-success text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.GroupBy(e => e.Shift).Count()</h3>
                        <p class="mb-0"><i class="fa fa-clock me-2"></i>Different Shifts</p>
                    </div>
                </div>
                <div class="col-md-4 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="bg-info text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">$@Model.Average(e => e.FeeByService).ToString("0.00")</h3>
                        <p class="mb-0"><i class="fa fa-dollar-sign me-2"></i>Avg Fee/Service</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
