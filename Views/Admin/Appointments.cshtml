@model IEnumerable<FYP___Vehicules_Service_and_Maintenance_Record_System.Models.Appointment>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "View Appointments";
    ViewData["PageHeader"] = "Customer Appointments";
    ViewData["PageSubtitle"] = "Appointments Database Overview";
    ViewData["ActivePage"] = "Appointments";
}

<div class="container-xxl py-5">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show wow fadeInDown">
                <i class="fa fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show wow fadeInDown">
                <i class="fa fa-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <h1 class="mb-4">Total Appointments: <span class="text-primary">@(Model?.Count() ?? 0)</span></h1>
        </div>

        <div class="bg-light rounded p-4 wow fadeInUp" data-wow-delay="0.3s">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Customer</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Car</th>
                            <th>Service</th>
                            <th>Date & Time</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var appointment in Model)
                            {
                                <tr>
                                    <td><strong>#@appointment.ID</strong></td>
                                    <td>
                                        <i class="fa fa-user text-primary me-2"></i>
                                        @(appointment.Car?.User?.FirstName ?? "N/A") @(appointment.Car?.User?.LastName ?? "")
                                    </td>
                                    <td>
                                        <i class="fa fa-envelope text-muted me-2"></i>
                                        @(appointment.Car?.User?.Email ?? "N/A")
                                    </td>
                                    <td>
                                        <i class="fa fa-phone text-muted me-2"></i>
                                        @(appointment.Car?.User?.PhoneNumber ?? "N/A")
                                    </td>
                                    <td>
                                        <i class="fa fa-car text-muted me-2"></i>
                                        @(appointment.Car?.Make ?? "N/A") @(appointment.Car?.Model ?? "") (@(appointment.Car?.Year.ToString() ?? ""))
                                        <br />
                                        <small class="text-muted">Plate: @(appointment.Car?.PlateNumber ?? "N/A")</small>
                                    </td>
                                    <td>
                                        <i class="fa fa-tools text-muted me-2"></i>
                                        @(appointment.Service?.ServiceName ?? "Not specified")
                                    </td>
                                    <td>
                                        <i class="fa fa-calendar text-muted me-2"></i>
                                        @appointment.ScheduleAppointment.ToString("MMM dd, yyyy")
                                        <br />
                                        <small class="text-muted">@appointment.ScheduleAppointment.ToString("hh:mm tt")</small>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = appointment.Status?.Name switch
                                            {
                                                "Pending" => "badge bg-warning text-dark",
                                                "Confirmed" => "badge bg-info",
                                                "In Progress" => "badge bg-primary",
                                                "Completed" => "badge bg-success",
                                                "Cancelled" => "badge bg-danger",
                                                _ => "badge bg-secondary"
                                            };
                                        }
                                        <span class="@statusClass">
                                            @(appointment.Status?.Name ?? "Unknown")
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <!-- Status Update Dropdown -->
                                        <div class="btn-group me-2">
                                            <button type="button" class="btn btn-sm btn-info dropdown-toggle" data-bs-toggle="dropdown">
                                                <i class="fa fa-edit"></i> Status
                                            </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <form method="post" asp-action="UpdateAppointmentStatus" asp-controller="Admin" style="display:inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@appointment.ID" />
                                                        <input type="hidden" name="statusId" value="1" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fa fa-clock text-warning"></i> Pending
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" asp-action="UpdateAppointmentStatus" asp-controller="Admin" style="display:inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@appointment.ID" />
                                                        <input type="hidden" name="statusId" value="2" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fa fa-check-circle text-info"></i> Confirmed
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" asp-action="UpdateAppointmentStatus" asp-controller="Admin" style="display:inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@appointment.ID" />
                                                        <input type="hidden" name="statusId" value="3" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fa fa-spinner text-primary"></i> In Progress
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" asp-action="UpdateAppointmentStatus" asp-controller="Admin" style="display:inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@appointment.ID" />
                                                        <input type="hidden" name="statusId" value="4" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fa fa-check text-success"></i> Completed
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form method="post" asp-action="UpdateAppointmentStatus" asp-controller="Admin" style="display:inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@appointment.ID" />
                                                        <input type="hidden" name="statusId" value="5" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fa fa-times text-danger"></i> Cancelled
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>

                                        <!-- Delete Button -->
                                        <form method="post" asp-action="DeleteAppointment" asp-controller="Admin" asp-route-id="@appointment.ID" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this appointment?')">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center mt-4">
                    <i class="fa fa-info-circle me-2"></i>
                    No appointments scheduled yet. Customers can create appointments through their dashboard.
                </div>
            }
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Appointment Statistics -->
            <div class="row g-4 mt-4">
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="bg-warning text-dark rounded p-4 text-center">
                        <h3 class="mb-2">@Model.Count(a => a.Status?.Name == "Pending")</h3>
                        <p class="mb-0"><i class="fa fa-clock me-2"></i>Pending</p>
                    </div>
                </div>
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="bg-info text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Count(a => a.Status?.Name == "Confirmed")</h3>
                        <p class="mb-0"><i class="fa fa-check-circle me-2"></i>Confirmed</p>
                    </div>
                </div>
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="bg-primary text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Count(a => a.Status?.Name == "In Progress")</h3>
                        <p class="mb-0"><i class="fa fa-spinner me-2"></i>In Progress</p>
                    </div>
                </div>
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.7s">
                    <div class="bg-success text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Count(a => a.Status?.Name == "Completed")</h3>
                        <p class="mb-0"><i class="fa fa-check me-2"></i>Completed</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
