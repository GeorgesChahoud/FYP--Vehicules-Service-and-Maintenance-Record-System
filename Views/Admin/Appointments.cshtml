@model IEnumerable<FYP___Vehicules_Service_and_Maintenance_Record_System.Models.Appointment>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "View Appointments";
    ViewData["PageHeader"] = "Customer Appointments";
    ViewData["PageSubtitle"] = "Appointments Database Overview";
    ViewData["ActivePage"] = "Appointments";
    
    var filterStatus = ViewBag.FilterStatus as string ?? "All";
    var allAppointments = ViewBag.AllAppointments as List<FYP___Vehicules_Service_and_Maintenance_Record_System.Models.Appointment> ?? Model?.ToList() ?? new List<FYP___Vehicules_Service_and_Maintenance_Record_System.Models.Appointment>();
}

<div class="container-xxl py-5">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show wow fadeInDown">
                <i class="fa fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show wow fadeInDown">
                <i class="fa fa-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="text-center mb-4 wow fadeInUp" data-wow-delay="0.1s">
            <h1 class="mb-4">Total Appointments: <span class="text-primary">@(Model?.Count() ?? 0)</span></h1>
        </div>

        <!-- Filter Buttons -->
        <div class="bg-light rounded p-4 mb-4 wow fadeInUp" data-wow-delay="0.2s">
            <div class="d-flex justify-content-center align-items-center flex-wrap gap-2">
                <span class="me-2 fw-bold"><i class="fa fa-filter me-2"></i>Filter by Status:</span>
                <a href="@Url.Action("Appointments", "Admin", new { status = "All" })" 
                   class="btn btn-sm @(filterStatus == "All" ? "btn-primary" : "btn-outline-primary")">
                    <i class="fa fa-list me-1"></i>All (@(allAppointments.Count))
                </a>
                <a href="@Url.Action("Appointments", "Admin", new { status = "Pending" })" 
                   class="btn btn-sm @(filterStatus == "Pending" ? "btn-warning text-dark" : "btn-outline-warning")">
                    <i class="fa fa-clock me-1"></i>Pending (@(allAppointments.Count(a => a.Status?.Name == "Pending")))
                </a>
                <a href="@Url.Action("Appointments", "Admin", new { status = "Confirmed" })" 
                   class="btn btn-sm @(filterStatus == "Confirmed" ? "btn-info text-white" : "btn-outline-info")">
                    <i class="fa fa-check-circle me-1"></i>Confirmed (@(allAppointments.Count(a => a.Status?.Name == "Confirmed")))
                </a>
                <a href="@Url.Action("Appointments", "Admin", new { status = "In Progress" })" 
                   class="btn btn-sm @(filterStatus == "In Progress" ? "btn-primary" : "btn-outline-primary")">
                    <i class="fa fa-spinner me-1"></i>In Progress (@(allAppointments.Count(a => a.Status?.Name == "In Progress")))
                </a>
                <a href="@Url.Action("Appointments", "Admin", new { status = "Completed" })" 
                   class="btn btn-sm @(filterStatus == "Completed" ? "btn-success text-white" : "btn-outline-success")">
                    <i class="fa fa-check me-1"></i>Completed (@(allAppointments.Count(a => a.Status?.Name == "Completed")))
                </a>
                <a href="@Url.Action("Appointments", "Admin", new { status = "Cancelled" })" 
                   class="btn btn-sm @(filterStatus == "Cancelled" ? "btn-danger text-white" : "btn-outline-danger")">
                    <i class="fa fa-times me-1"></i>Cancelled (@(allAppointments.Count(a => a.Status?.Name == "Cancelled")))
                </a>
            </div>
        </div>

        <div class="bg-light rounded p-4 wow fadeInUp" data-wow-delay="0.3s">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 80px;">ID</th>
                            <th style="width: 180px;">Customer</th>
                            <th style="width: 120px;">Status</th>
                            <th style="width: 180px;">Assigned To</th>
                            <th class="text-center" style="width: 150px;">Info</th>
                            <th class="text-center" style="width: 250px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var appointment in Model)
                            {
                                <tr>
                                    <td><strong>#@appointment.ID</strong></td>
                                    <td style="white-space: nowrap;">
                                        <i class="fa fa-user text-primary me-2"></i>
                                        @(appointment.Car?.User?.FirstName ?? "N/A") @(appointment.Car?.User?.LastName ?? "")
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = appointment.Status?.Name switch
                                            {
                                                "Pending" => "badge bg-warning text-dark status-badge-uniform",
                                                "Confirmed" => "badge bg-info status-badge-uniform",
                                                "In Progress" => "badge bg-primary status-badge-uniform",
                                                "Completed" => "badge bg-success status-badge-uniform",
                                                "Cancelled" => "badge bg-danger status-badge-uniform",
                                                _ => "badge bg-secondary status-badge-uniform"
                                            };
                                        }
                                        <span class="@statusClass">
                                            @(appointment.Status?.Name ?? "Unknown")
                                        </span>
                                    </td>
                                    <td>
                                        @if (appointment.Employee != null)
                                        {
                                            <span class="badge bg-success" style="font-size: 0.8rem; white-space: normal; display: inline-block; max-width: 140px;">
                                                <i class="fa fa-user-check me-1"></i>
                                                @appointment.Employee.User?.FirstName @appointment.Employee.User?.LastName
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary" style="font-size: 0.8rem; white-space: nowrap;">
                                                <i class="fa fa-user-times me-1"></i>Not Assigned
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <button type="button" 
                                                class="btn btn-sm btn-primary" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#appointmentModal@(appointment.ID)">
                                            <i class="fa fa-info-circle me-1"></i>View Info
                                        </button>
                                    </td>
                                    <td class="text-center">
                                        @if (appointment.Status?.Name == "Cancelled")
                                        {
                                            <!-- Cancelled appointments cannot be modified -->
                                            <div class="d-flex flex-column gap-1">
                                                <span class="badge bg-secondary py-2" style="font-size: 0.85rem;">
                                                    <i class="fa fa-lock me-1"></i>LOCKED - Cannot Modify
                                                </span>
                                            </div>
                                        }
                                        else if (appointment.Status?.Name == "Completed")
                                        {
                                            <!-- Completed appointments cannot be modified -->
                                            <div class="d-flex flex-column gap-1">
                                                <span class="badge bg-success py-2" style="font-size: 0.85rem;">
                                                    <i class="fa fa-lock me-1"></i>COMPLETED - Cannot Modify
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="btn-group-vertical w-100" role="group" style="min-width: 200px;">
                                                <!-- Assign Employee Button -->
                                                <a href="@Url.Action("AssignAppointment", "Admin", new { id = appointment.ID })" 
                                                   class="btn btn-sm btn-success d-flex align-items-center justify-content-center mb-1 action-btn-uniform" 
                                                   title="Assign this appointment to an employee"
                                                   style="border-radius: 5px; font-size: 0.85rem; height: 36px; padding: 0.5rem 0.75rem; min-width: 180px;">
                                                    <i class="fa fa-user-plus me-2"></i>
                                                    <span>Assign</span>
                                                </a>

                                                <!-- Status Update Dropdown -->
                                                <div class="dropdown mb-1" style="width: 100%;">
                                                    <button class="btn btn-sm btn-info dropdown-toggle w-100 d-flex align-items-center justify-content-center action-btn-uniform" 
                                                            type="button" 
                                                            id="statusDropdown@(appointment.ID)" 
                                                            data-bs-toggle="dropdown" 
                                                            aria-expanded="false"
                                                            style="border-radius: 5px; font-size: 0.85rem; height: 36px; padding: 0.5rem 0.75rem; min-width: 180px;">
                                                        <i class="fa fa-edit me-2"></i>
                                                        <span>Status</span>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="statusDropdown@(appointment.ID)" style="min-width: 200px;">
                                                        <li class="dropdown-header">
                                                            <i class="fa fa-info-circle me-1"></i>Change Status To:
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="post" asp-action="UpdateAppointmentStatus" asp-controller="Admin" style="display:inline;">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@appointment.ID" />
                                                                <input type="hidden" name="statusId" value="1" />
                                                                <button type="submit" class="dropdown-item d-flex align-items-center py-2">
                                                                    <i class="fa fa-clock text-warning me-2" style="width: 20px;"></i>
                                                                    <span>Pending</span>
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form method="post" asp-action="UpdateAppointmentStatus" asp-controller="Admin" style="display:inline;">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@appointment.ID" />
                                                                <input type="hidden" name="statusId" value="2" />
                                                                <button type="submit" class="dropdown-item d-flex align-items-center py-2">
                                                                    <i class="fa fa-check-circle text-info me-2" style="width: 20px;"></i>
                                                                    <span>Confirmed</span>
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form method="post" asp-action="UpdateAppointmentStatus" asp-controller="Admin" style="display:inline;">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@appointment.ID" />
                                                                <input type="hidden" name="statusId" value="3" />
                                                                <button type="submit" class="dropdown-item d-flex align-items-center py-2">
                                                                    <i class="fa fa-spinner text-primary me-2" style="width: 20px;"></i>
                                                                    <span>In Progress</span>
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form method="post" asp-action="UpdateAppointmentStatus" asp-controller="Admin" style="display:inline;">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@appointment.ID" />
                                                                <input type="hidden" name="statusId" value="4" />
                                                                <button type="submit" class="dropdown-item d-flex align-items-center py-2">
                                                                    <i class="fa fa-check text-success me-2" style="width: 20px;"></i>
                                                                    <span>Completed</span>
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li>
                                                            <form method="post" asp-action="UpdateAppointmentStatus" asp-controller="Admin" style="display:inline;">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="id" value="@appointment.ID" />
                                                                <input type="hidden" name="statusId" value="5" />
                                                                <button type="submit" class="dropdown-item d-flex align-items-center py-2 text-danger">
                                                                    <i class="fa fa-times me-2" style="width: 20px;"></i>
                                                                    <span>Cancel Appointment</span>
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>

                                                <!-- Delete Button -->
                                                <form method="post" asp-action="DeleteAppointment" asp-controller="Admin" asp-route-id="@appointment.ID" style="display:inline; width: 100%;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" 
                                                            class="btn btn-sm btn-danger w-100 d-flex align-items-center justify-content-center action-btn-uniform" 
                                                            onclick="return confirm('?? Are you sure you want to permanently delete this appointment?\n\nThis action cannot be undone!')"
                                                            style="border-radius: 5px; font-size: 0.85rem; height: 36px; padding: 0.5rem 0.75rem; min-width: 180px;">
                                                        <i class="fa fa-trash me-2"></i>
                                                        <span>Delete</span>
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                    </td>
                                </tr>

                                <!-- Appointment Info Modal -->
                                <div class="modal fade" id="appointmentModal@(appointment.ID)" tabindex="-1" aria-labelledby="appointmentModalLabel@(appointment.ID)" aria-hidden="true">
                                    <div class="modal-dialog modal-lg modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header bg-primary text-white">
                                                <h5 class="modal-title" id="appointmentModalLabel@(appointment.ID)">
                                                    <i class="fa fa-calendar me-2"></i>Appointment #@appointment.ID Details
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row g-3">
                                                    <!-- Customer Information -->
                                                    <div class="col-12">
                                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                                            <i class="fa fa-user me-2"></i>Customer Information
                                                        </h6>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong><i class="fa fa-user text-muted me-2"></i>Name:</strong>
                                                        <p class="mb-0">@(appointment.Car?.User?.FirstName ?? "N/A") @(appointment.Car?.User?.LastName ?? "")</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong><i class="fa fa-envelope text-muted me-2"></i>Email:</strong>
                                                        <p class="mb-0">@(appointment.Car?.User?.Email ?? "N/A")</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong><i class="fa fa-phone text-muted me-2"></i>Phone:</strong>
                                                        <p class="mb-0">@(appointment.Car?.User?.PhoneNumber ?? "N/A")</p>
                                                    </div>

                                                    <!-- Vehicle Information -->
                                                    <div class="col-12 mt-4">
                                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                                            <i class="fa fa-car me-2"></i>Vehicle Information
                                                        </h6>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong><i class="fa fa-car text-muted me-2"></i>Make & Model:</strong>
                                                        <p class="mb-0">@(appointment.Car?.Year.ToString() ?? "") @(appointment.Car?.Make ?? "N/A") @(appointment.Car?.Model ?? "")</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong><i class="fa fa-id-card text-muted me-2"></i>Plate Number:</strong>
                                                        <p class="mb-0">@(appointment.Car?.PlateNumber ?? "N/A")</p>
                                                    </div>

                                                    <!-- Appointment Details -->
                                                    <div class="col-12 mt-4">
                                                        <h6 class="text-primary border-bottom pb-2 mb-3">
                                                            <i class="fa fa-calendar-check me-2"></i>Appointment Details
                                                        </h6>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong><i class="fa fa-tools text-muted me-2"></i>Service:</strong>
                                                        <p class="mb-0">@(appointment.Service?.ServiceName ?? "Not specified")</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong><i class="fa fa-calendar text-muted me-2"></i>Date:</strong>
                                                        <p class="mb-0">@appointment.ScheduleAppointment.ToString("MMMM dd, yyyy")</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong><i class="fa fa-clock text-muted me-2"></i>Time:</strong>
                                                        <p class="mb-0">@appointment.ScheduleAppointment.ToString("hh:mm tt")</p>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <strong><i class="fa fa-info-circle text-muted me-2"></i>Status:</strong>
                                                        <p class="mb-0">
                                                            <span class="@statusClass">@(appointment.Status?.Name ?? "Unknown")</span>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    <i class="fa fa-times me-1"></i>Close
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center mt-4">
                    <i class="fa fa-info-circle me-2"></i>
                    @if (filterStatus != "All")
                    {
                        <text>No appointments found with status: <strong>@filterStatus</strong>. Try selecting a different filter.</text>
                    }
                    else
                    {
                        <text>No appointments scheduled yet. Customers can create appointments through their dashboard.</text>
                    }
                </div>
            }
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Appointment Statistics -->
            <div class="row g-4 mt-4">
                <div class="col-md-2 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="bg-warning text-dark rounded p-4 text-center">
                        <h3 class="mb-2">@allAppointments.Count(a => a.Status?.Name == "Pending")</h3>
                        <p class="mb-0"><i class="fa fa-clock me-2"></i>Pending</p>
                    </div>
                </div>
                <div class="col-md-2 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="bg-info text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@allAppointments.Count(a => a.Status?.Name == "Confirmed")</h3>
                        <p class="mb-0"><i class="fa fa-check-circle me-2"></i>Confirmed</p>
                    </div>
                </div>
                <div class="col-md-2 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="bg-primary text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@allAppointments.Count(a => a.Status?.Name == "In Progress")</h3>
                        <p class="mb-0"><i class="fa fa-spinner me-2"></i>In Progress</p>
                    </div>
                </div>
                <div class="col-md-2 wow fadeInUp" data-wow-delay="0.4s">
                    <div class="bg-success text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@allAppointments.Count(a => a.Status?.Name == "Completed")</h3>
                        <p class="mb-0"><i class="fa fa-check me-2"></i>Completed</p>
                    </div>
                </div>
                <div class="col-md-2 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="bg-danger text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@allAppointments.Count(a => a.Status?.Name == "Cancelled")</h3>
                        <p class="mb-0"><i class="fa fa-times me-2"></i>Cancelled</p>
                    </div>
                </div>
                <div class="col-md-2 wow fadeInUp" data-wow-delay="0.6s">
                    <div class="bg-dark text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@allAppointments.Count(a => a.Status?.Name == "Cancelled")</h3>
                        <p class="mb-0"><i class="fa fa-lock me-2"></i>Locked</p>
                        <small class="text-muted">Cannot modify</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
