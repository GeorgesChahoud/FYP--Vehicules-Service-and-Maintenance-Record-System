@model IEnumerable<FYP___Vehicules_Service_and_Maintenance_Record_System.Models.Receipt>

@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
    ViewData["Title"] = "My Receipts";
    ViewData["PageHeader"] = "My Receipts";
    ViewData["PageSubtitle"] = "All Receipts Generated by Me";
    ViewData["ActivePage"] = "MyReceipts";
}

<div class="container-xxl py-5">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show wow fadeInDown">
                <i class="fa fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show wow fadeInDown">
                <i class="fa fa-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="text-center mb-5 wow fadeInUp" data-wow-delay="0.1s">
            <h1 class="mb-4">Total Receipts: <span class="text-primary">@(Model?.Count() ?? 0)</span></h1>
        </div>

        <div class="bg-light rounded p-4 wow fadeInUp" data-wow-delay="0.3s">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle" style="min-width: 1400px;">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 80px;">Receipt ID</th>
                            <th style="width: 100px;">Appointment ID</th>
                            <th style="width: 150px;">Customer</th>
                            <th style="width: 180px;">Vehicle</th>
                            <th style="width: 150px;">Service</th>
                            <th style="width: 140px;">Date & Time</th>
                            <th style="width: 100px;">Parts Used</th>
                            <th style="width: 120px;">Total Amount</th>
                            <th class="text-center" style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var receipt in Model)
                            {
                                <tr>
                                    <td><strong>#@receipt.ID</strong></td>
                                    <td>
                                        <span class="badge bg-info">
                                            #@receipt.AppointmentID
                                        </span>
                                    </td>
                                    <td style="white-space: nowrap;">
                                        <i class="fa fa-user text-primary me-2"></i>
                                        @(receipt.Appointment?.Car?.User?.FirstName ?? "N/A") @(receipt.Appointment?.Car?.User?.LastName ?? "")
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span>
                                                <i class="fa fa-car text-muted me-2"></i>
                                                @(receipt.Appointment?.Car?.Make ?? "N/A") @(receipt.Appointment?.Car?.Model ?? "")
                                            </span>
                                            <small class="text-muted">@(receipt.Appointment?.Car?.Year.ToString() ?? "") | @(receipt.Appointment?.Car?.PlateNumber ?? "N/A")</small>
                                        </div>
                                    </td>
                                    <td>
                                        <i class="fa fa-tools text-muted me-2"></i>
                                        <span style="font-size: 0.9rem;">@(receipt.Appointment?.Service?.ServiceName ?? "Not specified")</span>
                                    </td>
                                    <td style="white-space: nowrap;">
                                        <i class="fa fa-calendar text-muted me-2"></i>
                                        @receipt.DateANDTime.ToString("MMM dd, yyyy")
                                        <br />
                                        <small class="text-muted">@receipt.DateANDTime.ToString("hh:mm tt")</small>
                                    </td>
                                    <td class="text-center">
                                        @if (receipt.ReceiptParts != null && receipt.ReceiptParts.Any())
                                        {
                                            <span class="badge bg-primary">
                                                @receipt.ReceiptParts.Count() @(receipt.ReceiptParts.Count() == 1 ? "Part" : "Parts")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                No Parts
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fa fa-dollar-sign text-success me-2"></i>
                                            <strong class="text-success fs-5">@receipt.Total.ToString("F2")</strong>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("ReceiptDetail", "Employee", new { id = receipt.ID })" 
                                           class="btn btn-sm btn-info d-flex align-items-center justify-content-center"
                                           style="font-size: 0.85rem;">
                                            <i class="fa fa-eye me-2"></i>
                                            <span>View</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center mt-4">
                    <i class="fa fa-info-circle me-2"></i>
                    No receipts created yet. Complete an appointment to generate your first receipt.
                </div>
            }
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Receipt Statistics -->
            <div class="row g-4 mt-4">
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="bg-success text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Count()</h3>
                        <p class="mb-0"><i class="fa fa-file-invoice me-2"></i>Total Receipts</p>
                    </div>
                </div>
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="bg-primary text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">@Model.Where(r => r.ReceiptParts != null).Sum(r => r.ReceiptParts.Count)</h3>
                        <p class="mb-0"><i class="fa fa-cogs me-2"></i>Total Parts Used</p>
                    </div>
                </div>
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="bg-warning text-dark rounded p-4 text-center">
                        <h3 class="mb-2">$@Model.Sum(r => r.Total).ToString("F2")</h3>
                        <p class="mb-0"><i class="fa fa-dollar-sign me-2"></i>Total Revenue</p>
                    </div>
                </div>
                <div class="col-md-3 wow fadeInUp" data-wow-delay="0.4s">
                    <div class="bg-info text-white rounded p-4 text-center">
                        <h3 class="text-white mb-2">$@(Model.Any() ? Model.Average(r => r.Total).ToString("F2") : "0.00")</h3>
                        <p class="mb-0"><i class="fa fa-chart-line me-2"></i>Average Receipt</p>
                    </div>
                </div>
            </div>

            <!-- Recent Receipts Section -->
            <div class="row g-4 mt-4">
                <div class="col-12 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="fa fa-chart-bar me-2"></i>Monthly Overview</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-3">This Month</h6>
                                    @{
                                        var thisMonth = Model.Where(r => r.DateANDTime.Month == DateTime.Now.Month && r.DateANDTime.Year == DateTime.Now.Year);
                                    }
                                    <p class="mb-2"><i class="fa fa-file-invoice text-primary me-2"></i><strong>Receipts:</strong> @thisMonth.Count()</p>
                                    <p class="mb-2"><i class="fa fa-dollar-sign text-success me-2"></i><strong>Revenue:</strong> $@thisMonth.Sum(r => r.Total).ToString("F2")</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-3">Last Month</h6>
                                    @{
                                        var lastMonth = Model.Where(r => r.DateANDTime.Month == DateTime.Now.AddMonths(-1).Month && r.DateANDTime.Year == DateTime.Now.AddMonths(-1).Year);
                                    }
                                    <p class="mb-2"><i class="fa fa-file-invoice text-primary me-2"></i><strong>Receipts:</strong> @lastMonth.Count()</p>
                                    <p class="mb-2"><i class="fa fa-dollar-sign text-success me-2"></i><strong>Revenue:</strong> $@lastMonth.Sum(r => r.Total).ToString("F2")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
