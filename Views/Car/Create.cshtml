<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Add New Car - CarHub</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@600;700&family=Ubuntu:wght@400;500&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.css" rel="stylesheet">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Spinner End -->

    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
        <a href="@Url.Action("Index", "Home")" class="navbar-brand d-flex align-items-center px-4 px-lg-5">
            <h2 class="m-0 text-primary"><i class="fa fa-car me-3"></i>CarHub</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="@Url.Action("Index", "Home")" class="nav-item nav-link">Home</a>
                <a href="@Url.Action("Index", "Car")" class="nav-item nav-link active">My Cars</a>
            </div>
            <form method="post" asp-action="Logout" asp-controller="Auth" class="d-none d-lg-block">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary py-4 px-lg-5">
                    Logout<i class="fa fa-sign-out-alt ms-3"></i>
                </button>
            </form>
        </div>
    </nav>
    <!-- Navbar End -->

    <!-- Page Header Start -->
    <div class="container-fluid page-header mb-5 p-0" style="background-image: url(/img/carousel-bg-1.jpg);">
        <div class="container-fluid page-header-inner py-5">
            <div class="container text-center">
                <h1 class="display-3 text-white mb-3 animated slideInDown">Add New Car</h1>
                <p class="text-white">Register Your Vehicle</p>
            </div>
        </div>
    </div>
    <!-- Page Header End -->

    <!-- Add Car Form Start -->
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show wow fadeInDown">
                            <i class="fa fa-exclamation-triangle me-2"></i>
                            @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="bg-light rounded p-5 wow fadeInUp" data-wow-delay="0.3s">
                        <form method="post" asp-action="Create">
                            @Html.AntiForgeryToken()
                            
                            <h4 class="text-primary mb-4">
                                <i class="fa fa-car me-2"></i>Vehicle Information
                            </h4>
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="Make" placeholder="Make" required>
                                        <label><i class="fa fa-industry text-primary me-2"></i>Make *</label>
                                    </div>
                                    <small class="text-muted">e.g., Toyota, Honda, BMW</small>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="Model" placeholder="Model" required>
                                        <label><i class="fa fa-car text-primary me-2"></i>Model *</label>
                                    </div>
                                    <small class="text-muted">e.g., Camry, Civic, X5</small>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="number" class="form-control" name="Year" placeholder="Year" min="1900" max="@DateTime.Now.Year" required>
                                        <label><i class="fa fa-calendar text-primary me-2"></i>Year *</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="PlateNumber" placeholder="Plate Number" required>
                                        <label><i class="fa fa-id-card text-primary me-2"></i>Plate Number *</label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input type="text" class="form-control" name="Vin" placeholder="VIN (Optional)">
                                        <label><i class="fa fa-barcode text-primary me-2"></i>VIN (Optional)</label>
                                    </div>
                                    <small class="text-muted">Vehicle Identification Number</small>
                                </div>
                            </div>

                            <div class="row g-3 mt-4">
                                <div class="col-sm-6">
                                    <button type="submit" class="btn btn-primary w-100 py-3">
                                        <i class="fa fa-save me-2"></i>Add Car
                                    </button>
                                </div>
                                <div class="col-sm-6">
                                    <a href="@Url.Action("Index", "Car")" class="btn btn-secondary w-100 py-3">
                                        <i class="fa fa-times me-2"></i>Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Add Car Form End -->

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-light footer pt-5 mt-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container py-5">
            <div class="row g-5">
                <div class="col-lg-3 col-md-6">
                    <h4 class="text-light mb-4">Address</h4>
                    <p class="mb-2"><i class="fa fa-map-marker-alt me-3"></i>123 Street, Beirut, Lebanon</p>
                    <p class="mb-2"><i class="fa fa-phone-alt me-3"></i>+961 03 866 298</p>
                    <p class="mb-2"><i class="fa fa-envelope me-3"></i>CarHub@gmail.com</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer End -->

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/wow/wow.js"></script>
    <script src="~/lib/easing/easing.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
